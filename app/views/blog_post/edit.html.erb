<h1>Edit Blog</h1>

<%= form_with model: @blog_post, url: blog__post_path(@blog_post), method: :patch, local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title %>
  <br />
  <%= form.label :content %>
  <%= form.text_field :content %>
  <br /> 
  <%= form.submit %>
  <% end %>
  <br />

  <p>Back to <%= link_to 'Blog Content', blog_post_path %></p>>
